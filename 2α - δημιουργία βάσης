CREATE DATABASE PublishingHouse;
Use PublishingHouse;
CREATE TABLE DEPARTMENT(Dnumber INTEGER UNIQUE, Name VARCHAR(20) UNIQUE, PRIMARY KEY (Dnumber));
CREATE TABLE EMPLOYEE(AFM INTEGER UNIQUE, Dno INTEGER UNIQUE, First_name VARCHAR(40), Last_name VARCHAR(40), Salary INTEGER, Address VARCHAR(60), Contact_number INTEGER, Email VARCHAR(64), PRIMARY KEY (AFM), FOREIGN KEY (Dno) REFERENCES DEPARTMENT);
CREATE TABLE Take_on (Dno INTEGER UNIQUE, Pno INTEGER UNIQUE);
CREATE TABLE Works_on (Emp_AFM INTEGER UNIQUE, Pno INTEGER UNIQUE, Hours INTEGER);
CREATE TABLE COOPERATES (AFM INTEGER UNIQUE, Pno INTEGER UNIQUE, Payment INTEGER, Notes VARCHAR(250), PRIMARY KEY(AFM));
CREATE TABLE FREELANCER (AFM INTEGER UNIQUE, First_name VARCHAR(50), Last_name VARCHAR(50), Address VARCHAR(60), Email VARCHAR(64), Contact_number INTEGER, Profession VARCHAR(20), PRIMARY KEY(AFM));
CREATE TABLE PROJECT (Project_number INTEGER UNIQUE, Title VARCHAR(80), Description VARCHAR(300), Type VARCHAR(30), Start_date DATE, End_date DATE, Real_start_date DATE, Real_end_date DATE, Status VARCHAR(15), PRIMARY KEY(Project_number));
CREATE TABLE BOOK (ISBN VARCHAR(13) UNIQUE, Title VARCHAR(80), Author VARCHAR(100), Language VARCHAR(30), Page_count INTEGER, Inventory_count INTEGER, Price FLOAT, Project_Id INTEGER UNIQUE, PRIMARY KEY (ISBN));
CREATE TABLE BOOKSTORE (AFM INTEGER UNIQUE, Name VARCHAR(20), Address VARCHAR(60), Email VARCHAR(64), Website VARCHAR(100), PRIMARY KEY(AFM));
CREATE TABLE PERSON(AFM INTEGER UNIQUE, Name VARCHAR(80), PRIMARY KEY(AFM));
CREATE TABLE CUSTOMER(AFM INTEGER UNIQUE, Contact_phone INTEGER, PRIMARY KEY(AFM));
CREATE TABLE SALE(Id INTEGER UNIQUE, Date DATETIME, Subtotal FLOAT, Discount INTEGER, Total FLOAT, Customer_Id INTEGER);
CREATE TABLE TO_SALE(Book_id VARCHAR(200) UNIQUE, Sale_id INTEGER UNIQUE, Quantity INTEGER);
